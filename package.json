{
	"name": "bonjourr-apis",
	"author": "Victor Azevedo",
	"description": "This regroups all APIs used by Bonjourr as a single cloudflare worker",
	"license": "ISC",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/victrme/bonjourr-apis"
	},
	"scripts": {
		"test": "vitest",
		"test:ci": "pnpm git:init && vitest",
		"dev": "pnpm git:update && wrangler dev --ip 127.0.0.1 --port 8787",
		"git:init": "git submodule update --init --recursive",
		"git:update": "git submodule update --remote"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20240208.0",
		"vitest": "^1.3.0",
		"wrangler": "^3.28.3"
	}
}
