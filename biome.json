{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true,
		"lineWidth": 120,
		"indentWidth": 4,
		"indentStyle": "tab",
		"ignore": [".wrangler", "favicon/**", "quotes/**", "suggestions/**", "meteo/**"]
	},
	"linter": {
		"enabled": true,
		"ignore": [".wrangler", "favicon/**", "quotes/**", "suggestions/**", "meteo/**"],
		"rules": {
			"all": true,
			"style": {
				"noParameterAssign": "info",
				"useNamingConvention": "off"
			},
			"suspicious": {
				"noConsole": "off"
			},
			"correctness": {
				"useImportExtensions": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": false
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"lineWidth": 120,
			"quoteStyle": "double",
			"semicolons": "asNeeded",
			"arrowParentheses": "asNeeded"
		}
	}
}
